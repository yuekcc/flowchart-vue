{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "all": false
      },
      "complexity": {
        "noForEach": "off"
      },
      "style": {
        "useConst": "warn"
      }
    }
  },
  "formatter": {
    "lineWidth": 110
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
